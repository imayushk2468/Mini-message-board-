<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Mini Message Board</title>
  <style>
    body {
      font-family: sans-serif;
      max-width: 600px;
      margin: 40px auto;
      padding: 20px;
      background: #f5f5f5;
      color: #333;
    }
    h1 {
      text-align: center;
      color: #444;
    }
    .message {
      background: #fff;
      border: 1px solid #ddd;
      border-left: 4px solid #007bff;
      padding: 12px 16px;
      margin-bottom: 12px;
      border-radius: 6px;
    }
    .message .meta {
      font-size: 0.85em;
      color: #777;
    }
    .new-message {
      display: block;
      margin: 20px auto;
      text-align: center;
    }
    .new-message a {
      text-decoration: none;
      background-color: #007bff;
      color: #fff;
      padding: 10px 16px;
      border-radius: 4px;
      transition: background-color 0.3s ease;
    }
    .new-message a:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <h1> Message Board</h1>

  <% messages.forEach(msg => { %>
    <div class="message">
      <strong><%= msg.user %></strong> says:<br>
      <%= msg.text %><br>
      <div class="meta"><%= msg.added.toLocaleString() %></div>
    </div>
  <% }); %>

  <div class="new-message">
   <li><a href="/users/new">+ New Message</a></li>
  </div>
</body>
</html>
